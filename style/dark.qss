   Objetivo:
   - Centralizar TODO o estilo da IDE
   - Permitir fácil customização
   - Servir como documentação visual
   ========================================================= */


/* =========================================================
   [1] CONFIGURAÇÃO GLOBAL
   ========================================================= */

/* Aplica fonte padrão a TODOS os widgets */
* {
    font-family: Consolas, "Courier New", monospace;
    font-size: 10pt;            /* Altere aqui o tamanho global */
}

/* Janela principal */
QMainWindow {
    background-color: #1e1e1e;  /* Fundo geral da IDE */
}


/* =========================================================
   [2] MENU BAR (barra superior)
   ========================================================= */

QMenuBar {
    background-color: #ffffff;  /* Fundo da barra */
    color: #000000;             /* Cor do texto */
    border-bottom: 1px solid #333;
}

/* Item do menu */
QMenuBar::item {
    background: transparent;
    padding: 6px 12px;          /* Espaçamento interno */
}

/* Item quando selecionado */
QMenuBar::item:selected {
    background-color: #cccccc;  /* Destaque ao passar mouse */
}


/* =========================================================
   [3] MENU DROPDOWN
   ========================================================= */

QMenu {
    background-color: #252526;
    color: #ffffff;
    border: 1px solid #333;     /* Borda do menu */
}

/* Itens do menu */
QMenu::item {
    padding: 6px 24px;
}

/* Item selecionado */
QMenu::item:selected {
    background-color: #007acc;  /* Azul estilo VS Code */
}


/* =========================================================
   [4] TOOLBAR
   ========================================================= */

QToolBar {
    background-color: #2d2d30;
    border-bottom: 1px solid #3c3c3c;
    spacing: 6px;               /* Espaço entre botões */
    padding: 1px 3px;
}

/* Botão da toolbar */
QToolButton {
    background-color: transparent;
    color: #ffffff;
    padding: 6px;
    border-radius: 4px;
}

/* Hover do botão */
QToolButton:hover {
    background-color: #3c3c3c;
}

/* Botão pressionado */
QToolButton:pressed {
    background-color: #007acc;
}


/* =========================================================
   [5] BOTÕES PADRÃO
   ========================================================= */

QPushButton {
    background-color: #3c3c3c;
    color: #ffffff;
    border: 1px solid #555;
    padding: 6px 12px;
    border-radius: 4px;
}

/* Hover */
QPushButton:hover {
    background-color: #505050;
}

/* Pressionado */
QPushButton:pressed {
    background-color: #007acc;
}

/* Desativado */
QPushButton:disabled {
    background-color: #2d2d30;
    color: #777;
}


/* =========================================================
   [6] COMBOBOX
   ========================================================= */

QComboBox {
    background-color: #3c3c3c;
    color: #ffffff;
    border: 1px solid #555;
    padding: 4px 8px;
}

/* Lista suspensa */
QComboBox QAbstractItemView {
    background-color: #252526;
    selection-background-color: #007acc;
    color: #ffffff;
}

/* Seta do ComboBox */
QComboBox::drop-down {
    border: none;
}


/* =========================================================
   [7] EDITOR DE CÓDIGO
   ========================================================= */

QPlainTextEdit {
    background-color: #1e1e1e;      /* Fundo do editor */
    color: #d4d4d4;                 /* Cor do código */
    selection-background-color: #264f78;
    border: none;
}

/* Editor em modo somente leitura */
QPlainTextEdit[readOnly="true"] {
    background-color: #252526;
    color: #999;
}


/* =========================================================
   [8] TABS (Editor, Output, Serial)
   ========================================================= */

QTabWidget::pane {
    border-top: 1px solid #3c3c3c;
}

/* Aba normal */
QTabBar::tab {
    background-color: #2d2d30;
    color: #cccccc;
    padding: 6px 16px;
    border: 1px solid #3c3c3c;
    border-bottom: none;
}

/* Aba ativa */
QTabBar::tab:selected {
    background-color: #1e1e1e;
    color: #ffffff;
}

/* Aba hover */
QTabBar::tab:hover {
    background-color: #3c3c3c;
}


/* =========================================================
   [9] DOCK WIDGET (Simulador, Serial, etc)
   ========================================================= */

QDockWidget {
    border: 1px solid #2a2a2a;
}

/* Título do Dock */
QDockWidget::title {
    background-color: #2d2d30;
    color: #ffffff;
    padding: 8px;
}

/* Botões do Dock */
QDockWidget::close-button,
QDockWidget::float-button {
    background: transparent;
}


/* =========================================================
   [10] TEXTOS (Output, Serial Monitor)
   ========================================================= */

QTextEdit {
    background-color: #1e1e1e;
    color: #ffffff;
    border: none;
}


/* =========================================================
   [11] STATUS BAR
   ========================================================= */

QStatusBar {
    background-color: #007acc;   /* Barra inferior */
    color: #ffffff;
}

QStatusBar QLabel {
    color: #ffffff;
}


/* =========================================================
   [12] SCROLLBAR
   ========================================================= */

/* Scroll vertical */
QScrollBar:vertical {
    background: #1e1e1e;
    width: 10px;
}

/* Barra móvel */
QScrollBar::handle:vertical {
    background: #3c3c3c;
    min-height: 20px;
}

/* Hover */
QScrollBar::handle:vertical:hover {
    background: #505050;
}

/* Remove botões padrão */
QScrollBar::add-line,
QScrollBar::sub-line {
    background: none;
}


/* =========================================================
   [13] RADIO BUTTON
   ========================================================= */

QRadioButton {
    color: #ffffff;
    spacing: 6px;
}

QRadioButton::indicator {
    width: 14px;
    height: 14px;
}

QRadioButton::indicator:checked {
    background-color: #007acc;
    border-radius: 7px;
}


/* =========================================================
   [14] CHECKBOX
   ========================================================= */

QCheckBox {
    color: #ffffff;
    spacing: 6px;
}

QCheckBox::indicator:checked {
    background-color: #007acc;
}
